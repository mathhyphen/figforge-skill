  "tags": [
    "scientific-figures",
    "visualization",
    "gemini",
    "image-generation",
    "openclaw",
    "style-transfer"
  ],
  "requirements": {
    "python": ">=3.8",
    "packages": [
      "google-genai>=0.2.0",
      "python-dotenv>=1.0.0",
      "click>=8.1.0",
      "pillow>=10.0.0"
    ],
    "env": ["GEMINI_API_KEY"],
    "model": "gemini-2.0-flash-exp-image-generation"
  },
  "features": [
    "Text-to-figure generation",
    "MODULE LIST based generation",
    "Style transfer from reference images",
    "Strict style matching mode",
    "Blended style mode (reference + academic)",
    "Color palette extraction",
    "Automatic style analysis"
  ],
  "cli": {
    "basic": "python scripts/run_complete.py -i input.txt",
    "with_style": "python scripts/run_complete.py -i input.txt -r reference.png",
    "blend_mode": "python scripts/run_complete.py -i input.txt -r reference.png --blend"
  },
  "workflow": {
    "input": "Text or MODULE LIST",
    "reference": "Optional: Reference image for style transfer",
    "output": "Publication-quality figure (PNG)"
  },
