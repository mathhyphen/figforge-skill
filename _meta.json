{
  "owner": "mathhyphen",
  "slug": "figforge",
  "displayName": "FigForge - Scientific Figure Generator with Style Transfer",
  "description": "Generate publication-quality scientific figures with style transfer support. Match styles from reference images for consistent figures across papers.",
  "version": "3.0.0",
  "entry": "scripts/run_complete.py",
  "latest": {
    "version": "3.0.0",
